---
import React from 'react'
import { BackgroundRippleEffect } from '../../ui/background-ripple-effect'
import pythonSVG from '../../../assets/python.svg'
import fastapiSVG from '../../../assets/fastapi.svg'
import numpySVG from '../../../assets/numpy.svg'
import opencvSVG from '../../../assets/opencv.svg'
import pandasSVG from '../../../assets/pandas.svg'
import postmanSVG from '../../../assets/postman.svg'
import seleniumSVG from '../../../assets/selenium.svg'
import streamlitSVG from '../../../assets/streamlit.svg'
import tsigLogo from '../../../assets/tsig.png'


  // Define technology icons with descriptions
  const technologies = [
    { id: 1, icon: pythonSVG, name: 'Python', description: 'Versatile programming language for web development, data science, and automation' },
    { id: 2, icon: fastapiSVG, name: 'FastAPI', description: 'High-performance Python web framework for building APIs with automatic documentation' },
    { id: 3, icon: numpySVG, name: 'NumPy', description: 'Fundamental library for numerical computing and array operations in Python' },
    { id: 4, icon: opencvSVG, name: 'OpenCV', description: 'Open source computer vision library for image and video processing' },
    { id: 5, icon: pandasSVG, name: 'Pandas', description: 'Powerful data manipulation and analysis library for Python' },
    { id: 6, icon: postmanSVG, name: 'Postman', description: 'API development and testing platform for building and managing APIs' },
    { id: 7, icon: seleniumSVG, name: 'Selenium', description: 'Web automation framework for testing and browser automation' },
    { id: 8, icon: streamlitSVG, name: 'Streamlit', description: 'Rapid web app development framework for Python data science applications' },
  ];

  // Define positions ensuring no overlapping and Python in center - Mobile responsive
  const techElements = [
    // Python in the center (largest)
    { id: 1, size: 'w-16 h-16 md:w-24 md:h-24 lg:w-32 lg:h-32', position: 'top-[50%] left-[50%] transform -translate-x-1/2 -translate-y-1/2', rotation: 'rotate-0', techIndex: 0 },
    
    // Top row - fewer icons on mobile
    { id: 2, size: 'w-8 h-8 md:w-12 md:h-12 lg:w-16 lg:h-16', position: 'top-[15%] left-[15%] md:left-[10%]', rotation: 'rotate-45', techIndex: 1 },
    { id: 3, size: 'w-10 h-10 md:w-14 md:h-14 lg:w-18 lg:h-18', position: 'top-[10%] right-[15%] md:right-[10%]', rotation: '-rotate-30', techIndex: 2 },
    
    // Left column - vertically spaced
    { id: 4, size: 'w-10 h-10 md:w-14 md:h-14 lg:w-16 lg:h-16', position: 'top-[35%] left-[5%]', rotation: 'rotate-90', techIndex: 3 },
    { id: 5, size: 'w-8 h-8 md:w-12 md:h-12 lg:w-16 lg:h-16', position: 'top-[65%] left-[8%]', rotation: '-rotate-60', techIndex: 4 },
    
    // Right column - vertically spaced
    { id: 6, size: 'w-10 h-10 md:w-14 md:h-14 lg:w-16 lg:h-16', position: 'top-[35%] right-[5%]', rotation: '-rotate-90', techIndex: 5 },
    { id: 7, size: 'w-8 h-8 md:w-12 md:h-12 lg:w-16 lg:h-16', position: 'top-[65%] right-[8%]', rotation: 'rotate-60', techIndex: 6 },
    
    // Bottom row - fewer icons on mobile
    { id: 8, size: 'w-8 h-8 md:w-12 md:h-12 lg:w-16 lg:h-16', position: 'bottom-[15%] left-[20%]', rotation: 'rotate-120', techIndex: 7 },
    { id: 9, size: 'w-10 h-10 md:w-14 md:h-14 lg:w-16 lg:h-16', position: 'bottom-[15%] right-[20%]', rotation: 'rotate-150', techIndex: 0 },
  ];

  // Additional icons for larger screens only
  const desktopOnlyElements = [
    { id: 11, size: 'w-14 h-14 lg:w-18 lg:h-18', position: 'top-[10%] left-[30%]', rotation: '-rotate-45', techIndex: 2 },
    { id: 12, size: 'w-12 h-12 lg:w-16 lg:h-16', position: 'top-[85%] left-[12%]', rotation: 'rotate-30', techIndex: 3 },
    { id: 13, size: 'w-14 h-14 lg:w-18 lg:h-18', position: 'top-[85%] right-[12%]', rotation: '-rotate-30', techIndex: 4 },
  ];
--- 
    <div class='h-screen w-screen relative overflow-hidden'>
      <BackgroundRippleEffect rows={8} cols={27} z-index={1} cellSize={56} />
      
      {/* TSIG Logo - Top Left */}
      <div class="absolute top-6 left-6 z-40">
        <img 
          src={tsigLogo.src}
          alt="TSIG Logo" 
          class="h-12 md:h-16 lg:h-20 w-auto opacity-90 hover:opacity-100 transition-opacity duration-300"
        />
      </div>
      
      {/* PYWEEK Event Title - Outline Only, Behind Icons - Full Screen Coverage */}
      <div class="absolute top-[50%] left-[50%] transform -translate-x-1/2 -translate-y-1/2 z-15 text-center pointer-events-none w-full h-full flex flex-col justify-center items-center">
        <h1 class="text-8xl sm:text-8xl md:text-9xl lg:text-[15rem] xl:text-[20rem] font-black text-transparent opacity-60 tracking-wider animate-pulse" 
            style={{
              WebkitTextStroke: '1px black',
            }}>
          PYWEEK
        </h1>
        <h1 class="text-7xl sm:text-8xl md:text-9xl lg:text-[13rem] xl:text-[20rem] font-black text-transparent opacity-40 tracking-wider animate-pulse -mt-4 sm:-mt-6 md:-mt-8 lg:-mt-12"
            style={{
              WebkitTextStroke: '1px #4b5563',
            }}>
          PYWEEK
        </h1>
        <h1 class="text-6xl sm:text-8xl md:text-9xl lg:text-[9rem] xl:text-[20rem] font-black text-transparent opacity-30 tracking-wider animate-pulse -mt-4 sm:-mt-6 md:-mt-8 lg:-mt-12"
            style={{
              WebkitTextStroke: '1px #9ca3af',
            }}>
          PYWEEK
        </h1>
      </div>

      {/* Register Now Button - Clean and Modern */}
      <div class="absolute top-[65%] left-[50%] transform -translate-x-1/2 z-30 text-center">
        <a href="https://forms.gle/SP3fpiP1nnD7vBie7" class="bg-black text-white font-bold p-3 rounded-[10px] hover:shadow-xl transition-all duration-300 transform  active:scale-95">
          Register Now
        </a>
      </div>

      {/* Center Python Icon - Dark, No Hover - Responsive */}
      <div class="absolute top-[50%] left-[50%] transform -translate-x-1/2 -translate-y-1/2 z-20 w-16 h-16 md:w-24 md:h-24 lg:w-32 lg:h-32">
        <img 
          src={technologies[0].icon.src} 
          alt="Python"
          class="w-full h-full "
        />
      </div>

      {/* Technology Icons (excluding center Python) - All screens */}
      <div class='absolute top-0 left-0 w-full h-full z-20'>
        {techElements.filter(element => element.id !== 1).map((element) => {
          const tech = technologies[element.techIndex];
          return (
            <div 
              class={`
                ${element.size} 
                ${element.position} 
                ${element.rotation}
                absolute 
                group
                transition-all 
                duration-500 
                ease-in-out
                opacity-80
                hover:opacity-100
                cursor-pointer
              `}
            >
              <img 
                src={tech.icon.src} 
                alt={tech.name}
                class={`
                  w-full h-full
                  hover:scale-110 
                  hover:rotate-45 
                  transition-all 
                  duration-500 
                  ease-in-out
                  drop-shadow-lg
                `}
              />
            </div>
          );
        })}
      </div>

      {/* Additional Icons - Desktop and Large screens only */}
      <div class='absolute top-0 left-0 w-full h-full z-20 hidden md:block'>
        {desktopOnlyElements.map((element) => {
          const tech = technologies[element.techIndex];
          return (
            <div 
              class={`
                ${element.size} 
                ${element.position} 
                ${element.rotation}
                absolute 
                group
                transition-all 
                duration-500 
                ease-in-out
                opacity-80
                hover:opacity-100
                cursor-pointer
              `}
            >
              <img 
                src={tech.icon.src} 
                alt={tech.name}
                class={`
                  w-full h-full
                  hover:scale-110 
                  hover:rotate-45 
                  transition-all 
                  duration-500 
                  ease-in-out
                  drop-shadow-lg
                `}
              />
            </div>
          );
        })}
      </div>
    </div>
  );


