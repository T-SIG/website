---
import { ArrowRightIcon } from "lucide-react";
import hangImg from "@/assets/hand.png";
import { Button } from "../ui/button";
---

<section
  class="flex flex-col items-center justify-start gap-4 md:gap-8 p-12 text-center pb-0 relative"
>
  <div
    class="bg-[radial-gradient(ellipse_200%_90%_at_45%_0,var(--color-background)_40%,var(--color-orange-300)_55%,var(--color-pink-400)_70%,var(--color-background)_90%)] bg-no-repeat bg-center origin-center absolute inset-0 -z-1"
  >
  </div>
  <h3 class="font-serif text-2xl md:text-4xl italic capitalize">
    your day in perfect rhythm
  </h3>
  <h1
    class="sm:max-w-lg font-semibold leading-[1.1] text-4xl md:text-6xl capitalize text-center"
  >
    work smarter, not harder
  </h1>
  <p class="md:max-w-5/12 font-light">
    Lorem ipsum dolor sit amet consectetur saepe eius doloribus repellat alias?
    Pariatur,
  </p>
  <Button
    variant={"ghost"}
    className="font-mono uppercase md:text-base md:p-6 tracking-tight bg-transparent text-foreground border border-foreground rounded-full "
  >
    get it for free
    <ArrowRightIcon className="size-4 md:size-5" />
  </Button>
  <div class="md:-mt-5 relative">
    <img src={hangImg.src} class="aspect-auto -mb-2 md:-mb-6 md:size-156" />
    <div
      class="absolute bottom-0 w-full h-full bg-linear-to-b from-transparent from-80% to-background"
    >
    </div>
  </div>
</section>
