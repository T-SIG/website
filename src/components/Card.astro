---
import { twMerge } from "tailwind-merge";
const { text, classes, src } = Astro.props;
const mergeStyles = twMerge(
  "text-xl uppercase font-light tracking-wider md:text-4xl md:font-normal mt-2",
  classes
);
---

<section class="title">
  <div>
    <img src={src} alt="" class="icon"  />

    <p set:html={text} class={mergeStyles} />
  </div>
</section>

<style>
  section {
    font-family: "League Spartan";
  }
  div {
    @apply flex items-center justify-center w-full gap-3;
  }
  .icon {
    aspect-ratio: 1;
    @apply h-8 md:h-12 stroke-[12px];
  }
</style>
